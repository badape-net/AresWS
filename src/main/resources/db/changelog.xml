<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <preConditions>
        <runningAs username="root"/>
    </preConditions>

    <changeSet id="1" author="badape">
        <createTable tableName="players">
            <column name="playerId" type="int unsigned" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="steamId64" type="bigint unsigned">
                <constraints unique="true"/>
            </column>
            <column name="credits" type="int unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="created" defaultValueComputed="now()" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="heroes">
            <column name="heroId" type="int unsigned" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="gameId" type="int unsigned">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="credits" type="int unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="roster">
            <column name="playerId" type="int unsigned">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="heroId" type="int unsigned">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="transactions">
            <column name="transactionId" type="bigint unsigned" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="credits" type="int unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="heroId" type="int unsigned">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="transactions" baseColumnNames="heroId" constraintName="heroId_fkey" referencedTableName="heroes"
                                 referencedColumnNames="heroId" onDelete="NO ACTION" onUpdate="NO ACTION" />

        <insert tableName="heroes">
            <column name="gameId" value="0"/>
            <column name="credits" value="5000"/>
            <column name="description" value="Dekker"/>
        </insert>
        <insert tableName="heroes">
            <column name="gameId" value="1"/>
            <column name="credits" value="7000"/>
            <column name="description" value="Shinbi"/>
        </insert>
        <insert tableName="heroes">
            <column name="gameId" value="2"/>
            <column name="credits" value="9000"/>
            <column name="description" value="Rampage"/>
        </insert>

        <insert tableName="players">
            <column name="steamId64" value="76561197960964184"/>
            <column name="credits" value="1000"/>
        </insert>

    </changeSet>

</databaseChangeLog>