FROM kilna/liquibase-postgres

LABEL maintainer="francis@badape.net"

ARG BAD_HOST=unset
ARG BAD_DATABASE=unset
ARG BAD_USERNAME=unset
ARG BAD_PASSWORD=unset

ENV LIQUIBASE_HOST=${BAD_HOST}
ENV LIQUIBASE_DATABASE=${BAD_DATABASE}
ENV LIQUIBASE_USERNAME=${BAD_USERNAME}
ENV LIQUIBASE_PASSWORD=${BAD_PASSWORD}

COPY changelog.xml /workspace